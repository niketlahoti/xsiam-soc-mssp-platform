{
  "name": "xsiam-soc-mssp-platform",
  "version": "1.0.0",
  "description": "World-Class SOC Investigation & MSSP Management Platform powered by Palo Alto Cortex XSIAM APIs",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "ai-engine"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:ai\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:ai": "cd ai-engine && npm run dev",
    "build": "npm run build:backend && npm run build:frontend && npm run build:ai",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "build:ai": "cd ai-engine && npm run build",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\" \"npm run start:ai\"",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm start",
    "start:ai": "cd ai-engine && npm start",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "test:integration": "jest --config jest.integration.config.js",
    "test:e2e": "playwright test",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "migrate": "cd backend && npm run migrate",
    "migrate:rollback": "cd backend && npm run migrate:rollback",
    "seed": "cd backend && npm run seed",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:build": "docker-compose build",
    "clean": "rm -rf node_modules frontend/node_modules backend/node_modules ai-engine/node_modules",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.11",
    "concurrently": "^8.2.2",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/niketlahoti/xsiam-soc-mssp-platform.git"
  },
  "keywords": [
    "soc",
    "mssp",
    "xsiam",
    "security",
    "incident-response",
    "threat-hunting",
    "cybersecurity",
    "palo-alto",
    "cortex"
  ],
  "author": "SOC Team",
  "license": "MIT"
}
